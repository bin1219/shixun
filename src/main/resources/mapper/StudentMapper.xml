<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.demo.mapper.StudentMapper">
    <!-- 获取所有学生信息 -->
    <select id="list" resultType="com.example.demo.entity.StudentEntity">
        select * from student
    </select>
    <!-- 添加学生信息 -->
    <insert id="insert" parameterType="com.example.demo.entity.StudentEntity">
        INSERT INTO
            student(student_id,name,age)
        values
            (#{student_id},#{name},#{age});
    </insert>
    <!-- 删除指定学号学生信息 -->
    <delete id="delById" parameterType="String">
        DELETE FROM student
        WHERE student_id = #{student_id};
    </delete>
    <!-- 更新指定学号学生信息 -->
    <update id="updateById" parameterType="com.example.demo.entity.StudentEntity">
        UPDATE student
        SET name = #{name},
            age = #{age}
        WHERE student_id = #{student_id};
    </update>
    <!-- 获取指定学号学生信息 -->
    <select id="getById" parameterType="String" resultType="com.example.demo.entity.StudentEntity">
        select * from student where student_id = #{student_id};
    </select>
</mapper>
